@model AspCoreFirstApp.Models.Genre

@{
    ViewData["Title"] = "Supprimer un Genre";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Attention !</strong> Cette action est irréversible.
                    </div>

                    <div class="card mb-4 bg-light">
                        <div class="card-body">
                            <p><strong>Genre à supprimer :</strong></p>
                            <p class="mb-1"><span class="badge bg-success">@Model.Name</span></p>
                            <p class="mb-0">
                                <small class="text-muted">
                                    Nombre de films associés : 
                                    <span class="badge bg-info">@(Model.Movies?.Count ?? 0)</span>
                                </small>
                            </p>
                        </div>
                    </div>

                    @if ((Model.Movies?.Count ?? 0) > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Attention !</strong> Ce genre est associé à @(Model.Movies.Count) film(s). 
                            La suppression de ce genre supprimera aussi ces associations.
                        </div>
                    }

                    <p class="text-muted mb-4">
                        Êtes-vous sûr de vouloir supprimer ce genre ? Cette action ne peut pas être annulée.
                    </p>

                    <form method="post" action="@Url.Action("DeleteConfirmed", "Genre")" style="display:inline;">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Supprimer définitivement
                            </button>
                            <a href="@Url.Action("Index", "Genre")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Information Panel -->
            <div class="card mt-4 border-info">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-info-circle"></i> Détails du Genre
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID :</dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                        
                        <dt class="col-sm-4">Nom :</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        
                        <dt class="col-sm-4">Films :</dt>
                        <dd class="col-sm-8">@(Model.Movies?.Count ?? 0)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
        padding: 1.5rem;
    }

    .btn {
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    .alert {
        border-radius: 5px;
    }
</style>
